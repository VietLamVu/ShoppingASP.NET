@model ContactModel
<div class="row">

	<div class="col-sm-5 col-md-5">
		@Html.Raw(@Model.Map)
		@Html.Raw(@Model.Description)
	</div>
	
	<div class="col-sm-4">
		<div class="address">
			<h5><b>Name: @Model.Name</b></h5>
			<h5><b>Email: @Model.Email</b></h5>
			<h5><b>Phone: @Model.Phone</b></h5>
		</div>
	</div>
	<!--Facebook: co doan script o _Layout (search fanpage plugin)-->
	<div class="col-md-4">
		<!--Trang lien he: link facebook-->
		<div class="fb-page" 
		data-href="https://www.facebook.com/hoangkien.co" 
		data-tabs="message" 
		data-width="" 
		data-height="" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/hoangkien.co" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/hoangkien.co">Hoangkien.com</a></blockquote></div>

	</div>
</div>