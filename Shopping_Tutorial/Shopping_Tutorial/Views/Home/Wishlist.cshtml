@model List<Tuple<Shopping_Tutorial.Models.AppUserModel, Shopping_Tutorial.Models.ProductModel, Shopping_Tutorial.Models.WishlistModel>>

@{
    ViewData["Title"] = "List Wishlist";
    var key = 0;
}
<h3>List Wishlist</h3>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var compare_product in Model)
        {
            key++;
            <tr>
                <td>@key</td>
                <td>@compare_product.Item2.Name</td> <!-- Product Name -->
                <td>@Html.Raw(compare_product.Item2.Description)</td> <!-- Product Description -->
                <td>@compare_product.Item2.Price.ToString("#,##0 VND")</td> <!-- Product Price -->
                <td><img src="~/media/products/@compare_product.Item2.Image" width="200px" height="200px" /></td> <!-- Product Image -->
                <td>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteWishlist" asp-route-Id="@compare_product.Item3.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
