@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Brand Role";
    
}
<h3>List Roles</h3>
<a asp-action="Create" asp-controller="Role">Add Role</a>
<!--id="myTable" : loc du lieu datatable js-->
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Role Name</th>
            <th scope="col">Role</th>          
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
               <td>@item.NormalizedName</td>


                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
